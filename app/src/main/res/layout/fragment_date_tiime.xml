<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#328836"
    tools:context=".twoFragment.DateTiimeFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:layout_margin="10dp"
       app:layout_constraintTop_toTopOf="parent"
       android:background="@drawable/bishkek">


   </androidx.constraintlayout.widget.ConstraintLayout>
   <TextView
       android:id="@+id/data"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="17:40 01/28/2021"
      android:textStyle="italic"
       android:textColor="@color/white"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginBottom="40dp"/>

      <TextView
          android:id="@+id/bish"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:text="Bishkek"
          android:textSize="30dp"
          android:textColor="@color/white"
         app:layout_constraintTop_toTopOf="parent"
          android:layout_marginTop="20dp"
          app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"/>
   <ImageView
       android:layout_width="match_parent"
       android:layout_height="250dp"
      android:src="@drawable/ic_baseline_wb_cloudy_24"
      app:layout_constraintTop_toBottomOf="@+id/bish"/>




</androidx.constraintlayout.widget.ConstraintLayout>